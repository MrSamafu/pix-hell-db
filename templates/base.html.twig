{# templates/base.html.twig #}
<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}PixHellDB{% endblock %}</title>

    {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
<nav class="navbar">
    <div class="navbar__container">
        <a class="navbar__brand" href="{{ path('app_home') }}">
            Pix<span>Hell</span>DB
        </a>
        <button class="navbar__toggle" type="button" onclick="toggleMenu()">
            <i class="fas fa-bars"></i>
        </button>
        <ul class="navbar__menu" id="navMenu">
            <li><a class="navbar__link" href="{{ path('app_home') }}"><i class="fas fa-home"></i> Accueil</a></li>
            <li><a class="navbar__link" href="{{ path('app_game_index') }}"><i class="fas fa-gamepad"></i> Jeux vidéo</a></li>
            <li><a class="navbar__link" href="{{ path('app_console_index') }}"><i class="fas fa-desktop"></i> Consoles</a></li>
            <li><a class="navbar__link" href="{{ path('app_accessory_index') }}"><i class="fas fa-plug"></i> Accessoires</a></li>
            <li><a class="navbar__link" href="{{ path('app_collection_index') }}"><i class="fas fa-folder-open"></i> Ma collection</a></li>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a class="navbar__link navbar__link--admin" href="{{ path('app_admin_dashboard') }}"><i class="fas fa-shield-alt"></i> Admin</a></li>
                {% endif %}
                <li><a class="navbar__link" href="{{ path('app_profile') }}"><i class="fas fa-user"></i> Profil</a></li>
                <li><a class="navbar__link" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> Déconnexion</a></li>
            {% else %}
                <li><a class="navbar__link" href="{{ path('app_login') }}"><i class="fas fa-sign-in-alt"></i> Connexion</a></li>
            {% endif %}
        </ul>
    </div>
</nav>

<main class="container py-lg">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert--{{ label == 'error' ? 'error' : (label == 'success' ? 'success' : 'info') }}" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
</main>

<footer class="text--center py-md">
    <div class="container">
        <small>&copy; {{ "now"|date("Y") }} - PixHellDB - Base de données retrogaming</small>
    </div>
</footer>

{% block javascripts %}
            {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('app') }}
    <script>
        function toggleMenu() {
            const menu = document.getElementById('navMenu');
            menu.classList.toggle('active');
        }
    </script>
{% endblock %}
</body>
</html>