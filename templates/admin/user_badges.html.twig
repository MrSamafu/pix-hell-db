{% extends 'base.html.twig' %}

{% block title %}Badges de {{ user.username }} - Admin - {{ parent() }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Header -->
            <div class="page-header mb-4">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div>
                        <h1 class="retro-title mb-1">
                            <i class="fas fa-trophy me-2"></i>Badges de {{ user.username }}
                        </h1>
                        <p class="text-muted mb-0">Gérez les badges de cet utilisateur</p>
                    </div>
                    <a href="{{ path('app_admin_users') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                </div>
            </div>

            <!-- User Info Card -->
            <div class="user-info-card mb-4">
                <div class="d-flex align-items-center gap-3">
                    <div class="user-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div>
                        <h4 class="mb-1">{{ user.username }}</h4>
                        {% if user.firstName or user.lastName %}
                        <p class="mb-1 text-muted">{{ user.firstName }} {{ user.lastName }}</p>
                        {% endif %}
                        <p class="mb-0 small">
                            <i class="fas fa-trophy me-1"></i>
                            {{ user.badges|length }} badge(s) actuellement
                        </p>
                    </div>
                </div>
            </div>

            <!-- Current Badges -->
            {% if user.badges|length > 0 %}
            <div class="badges-section mb-4">
                <div class="badges-section-header">
                    <h3><i class="fas fa-award me-2"></i>Badges actuels</h3>
                </div>
                <div class="badges-section-body">
                    <div class="badges-grid">
                        {% for badge in user.badges %}
                        <div class="badge-card current">
                            <div class="badge-image-container">
                                <img src="{{ badge.imageUrl }}" alt="{{ badge.name }}" class="badge-img">
                            </div>
                            <p class="badge-title">{{ badge.name }}</p>
                            {% if badge.description %}
                            <p class="badge-description">{{ badge.description }}</p>
                            {% endif %}
                            <form method="post" action="{{ path('app_user_badge_remove', {'id': user.id, 'badgeId': badge.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('remove_badge_' ~ user.id) }}">
                                <button type="submit"
                                        class="btn btn-sm btn-danger w-100"
                                        onclick="return confirm('Retirer ce badge ?')">
                                    <i class="fas fa-times me-1"></i>Retirer
                                </button>
                            </form>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif %}

            <!-- Available Badges -->
            {% set availableBadges = [] %}
            {% for badge in allBadges %}
                {% if badge not in user.badges %}
                    {% set availableBadges = availableBadges|merge([badge]) %}
                {% endif %}
            {% endfor %}

            <div class="badges-section mb-4">
                <div class="badges-section-header">
                    <h3><i class="fas fa-plus-circle me-2"></i>Badges disponibles</h3>
                </div>
                <div class="badges-section-body">
                    {% if availableBadges|length > 0 %}
                    <div class="badges-grid">
                        {% for badge in availableBadges %}
                        <div class="badge-card available">
                            <div class="badge-image-container">
                                <img src="{{ badge.imageUrl }}" alt="{{ badge.name }}" class="badge-img">
                            </div>
                            <p class="badge-title">{{ badge.name }}</p>
                            {% if badge.description %}
                            <p class="badge-description">{{ badge.description }}</p>
                            {% endif %}
                            <form method="post" action="{{ path('app_user_badge_add', {'id': user.id, 'badgeId': badge.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('add_badge_' ~ user.id) }}">
                                <button type="submit" class="btn btn-sm btn-success w-100">
                                    <i class="fas fa-plus me-1"></i>Attribuer
                                </button>
                            </form>
                        </div>
                        {% endfor %}
                    </div>
                    {% else %}
                    <div class="alert alert-info d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <strong>Tous les badges attribués !</strong><br>
                            Cet utilisateur possède déjà tous les badges disponibles.
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Quick Link to Badge Management -->
            <div class="text-center">
                <a href="{{ path('app_badge_index') }}" class="btn btn-warning text-dark">
                    <i class="fas fa-cog me-2"></i>Gérer tous les badges
                </a>
                <a href="{{ path('app_badge_new') }}" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Créer un nouveau badge
                </a>
            </div>
        </div>
    </div>
</div>

<style>
/* Page Header */
.page-header {
    background: linear-gradient(135deg, var(--retro-red) 0%, var(--retro-purple) 100%);
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
}

.page-header .retro-title,
.page-header .text-muted {
    color: var(--retro-light);
}

/* User Info Card */
.user-info-card {
    background: var(--retro-dark);
    border: 2px solid var(--retro-cyan);
    border-radius: 15px;
    padding: 1.5rem;
}

.user-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--retro-purple), var(--retro-cyan));
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    color: var(--retro-light);
    flex-shrink: 0;
}

.user-info-card h4 {
    color: var(--retro-light);
}

/* Badges Section */
.badges-section {
    background: var(--retro-dark);
    border: 2px solid var(--retro-purple);
    border-radius: 15px;
    overflow: hidden;
}

.badges-section-header {
    background: var(--retro-purple);
    padding: 1rem 1.5rem;
    border-bottom: 2px solid var(--retro-cyan);
}

.badges-section-header h3 {
    margin: 0;
    color: var(--retro-light);
    font-size: 1.2rem;
}

.badges-section-body {
    padding: 1.5rem;
}

/* Badges Grid */
.badges-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 1.5rem;
}

.badge-card {
    text-align: center;
    transition: all 0.3s ease;
}

.badge-image-container {
    width: 100%;
    aspect-ratio: 1;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    margin-bottom: 0.75rem;
    transition: all 0.3s ease;
}

.badge-card.current .badge-image-container {
    background: linear-gradient(135deg, rgba(103, 97, 168, 0.3), rgba(160, 193, 185, 0.3));
    border: 2px solid var(--retro-cyan);
}

.badge-card.available .badge-image-container {
    background: linear-gradient(135deg, rgba(103, 97, 168, 0.1), rgba(160, 193, 185, 0.1));
    border: 2px solid rgba(103, 97, 168, 0.3);
    opacity: 0.7;
}

.badge-card:hover .badge-image-container {
    transform: scale(1.05);
    box-shadow: 0 0 20px rgba(160, 193, 185, 0.5);
}

.badge-card.available:hover .badge-image-container {
    opacity: 1;
    border-color: var(--retro-cyan);
}

.badge-img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
}

.badge-title {
    color: var(--retro-light);
    font-weight: bold;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    min-height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
}

.badge-description {
    color: var(--retro-light);
    opacity: 0.7;
    font-size: 0.75rem;
    margin-bottom: 0.75rem;
    line-height: 1.3;
    min-height: 2.5rem;
}

/* Responsive */
@media (max-width: 1200px) {
    .badges-grid {
        grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
        gap: 1.25rem;
    }

    .page-header {
        padding: 1.5rem;
    }
}

@media (max-width: 992px) {
    .badges-grid {
        grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
        gap: 1rem;
    }

    .user-info-card {
        padding: 1.25rem;
    }

    .user-avatar {
        width: 70px;
        height: 70px;
        font-size: 2rem;
    }
}

@media (max-width: 768px) {
    .page-header {
        padding: 1rem;
        border-radius: 10px;
    }

    .page-header .d-flex {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
    }

    .page-header .retro-title {
        font-size: 1.5rem;
    }

    .page-header .btn {
        width: 100%;
    }

    .user-info-card {
        padding: 1rem;
        border-radius: 10px;
    }

    .user-info-card .d-flex {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
    }

    .user-avatar {
        width: 60px;
        height: 60px;
        font-size: 1.75rem;
        margin: 0 auto;
    }

    .badges-section {
        border-radius: 10px;
    }

    .badges-grid {
        grid-template-columns: repeat(auto-fill, minmax(110px, 1fr));
        gap: 1rem;
    }

    .badge-title {
        font-size: 0.85rem;
        min-height: 2rem;
    }

    .badge-description {
        font-size: 0.7rem;
        min-height: 2rem;
    }

    .text-center .btn {
        margin: 0.25rem;
    }
}

@media (max-width: 576px) {
    .container {
        padding-left: 0.5rem;
        padding-right: 0.5rem;
    }

    .page-header {
        padding: 0.75rem;
    }

    .page-header .retro-title {
        font-size: 1.25rem;
    }

    .page-header .text-muted {
        font-size: 0.85rem;
    }

    .user-info-card {
        padding: 0.75rem;
    }

    .user-info-card h4 {
        font-size: 1.1rem;
    }

    .user-info-card p {
        font-size: 0.85rem;
    }

    .user-avatar {
        width: 50px;
        height: 50px;
        font-size: 1.5rem;
    }

    .badges-section {
        border-radius: 8px;
        margin-bottom: 1rem;
    }

    .badges-section-header {
        padding: 0.75rem 1rem;
    }

    .badges-section-header h3 {
        font-size: 1rem;
    }

    .badges-section-body {
        padding: 1rem;
    }

    .badges-grid {
        grid-template-columns: repeat(auto-fill, minmax(90px, 1fr));
        gap: 0.75rem;
    }

    .badge-image-container {
        padding: 0.75rem;
        margin-bottom: 0.5rem;
    }

    .badge-title {
        font-size: 0.75rem;
        min-height: 1.75rem;
        margin-bottom: 0.5rem;
    }

    .badge-description {
        font-size: 0.65rem;
        min-height: 1.75rem;
        margin-bottom: 0.5rem;
    }

    .btn-sm {
        font-size: 0.75rem;
        padding: 0.35rem 0.5rem;
    }

    .alert {
        font-size: 0.85rem;
        padding: 0.75rem;
    }

    .alert i {
        font-size: 1.25rem;
    }

    /* Boutons empilés sur mobile */
    .text-center {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .text-center .btn {
        width: 100%;
        margin: 0;
    }
}

@media (max-width: 400px) {
    .page-header .retro-title {
        font-size: 1.1rem;
    }

    .badges-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 0.5rem;
    }

    .badge-title {
        font-size: 0.7rem;
    }

    .badge-description {
        font-size: 0.6rem;
    }
}
</style>
{% endblock %}

