{% extends 'base.html.twig' %}

{% block title %}Consoles - {{ parent() }}{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="page-header-content">
            <h1 class="page-title">
                <span class="icon">üïπÔ∏è</span>
                Consoles
            </h1>
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_console_new') }}" class="btn btn-primary">
                    <span class="btn-icon">+</span>
                    Ajouter une console
                </a>
            {% endif %}
        </div>
    </div>

    {% if consoles is empty %}
        <div class="empty-state">
            <div class="empty-state-icon">üïπÔ∏è</div>
            <h2 class="empty-state-title">Aucune console pour le moment</h2>
            <p class="empty-state-text">Commencez √† documenter votre collection de consoles !</p>
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_console_new') }}" class="btn btn-primary">Ajouter votre premi√®re console</a>
            {% endif %}
        </div>
    {% else %}
        <div class="cards-grid">
            {% for console in consoles %}
                <div class="card-item">
                    {% if console.image %}
                        <div class="card-image" style="background-image: url('{{ console.image }}');">
                            <div class="card-image-overlay"></div>
                        </div>
                    {% else %}
                        <div class="card-image card-image-placeholder">
                            <span class="placeholder-icon">üïπÔ∏è</span>
                        </div>
                    {% endif %}

                    <div class="card-content">
                        <h3 class="card-title">{{ console.name }}</h3>

                        <div class="card-meta">
                            {% if console.manufacturer %}
                                <span class="meta-item">
                                    <span class="meta-label">Fabricant</span>
                                    <span class="meta-value">{{ console.manufacturer }}</span>
                                </span>
                            {% endif %}

                            {% if console.generation %}
                                <span class="meta-item">
                                    <span class="meta-label">G√©n√©ration</span>
                                    <span class="meta-value">{{ console.generation }}</span>
                                </span>
                            {% endif %}

                            {% if console.releaseDate %}
                                <span class="meta-item">
                                    <span class="meta-label">Sortie</span>
                                    <span class="meta-value">{{ console.releaseDate|date('d/m/Y') }}</span>
                                </span>
                            {% endif %}

                            {% if console.maxPlayers %}
                                <span class="meta-item">
                                    <span class="meta-label">Joueurs max</span>
                                    <span class="meta-value">{{ console.maxPlayers }}</span>
                                </span>
                            {% endif %}
                        </div>

                        <div class="card-actions">
                            <a href="{{ path('app_console_show', {'id': console.id}) }}" class="btn btn-secondary btn-sm">
                                Voir d√©tails
                            </a>

                            {% if is_granted('edit', console) %}
                                <a href="{{ path('app_console_edit', {'id': console.id}) }}" class="btn btn-outline btn-sm" title="Modifier">
                                    ‚úèÔ∏è
                                </a>
                            {% endif %}

                            {% if is_granted('delete', console) %}
                                <form method="post" action="{{ path('app_console_delete', {'id': console.id}) }}" class="inline-form" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette console ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ console.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Supprimer">üóëÔ∏è</button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}

