{% extends 'base.html.twig' %}

{% block title %}Consoles - {{ parent() }}{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="page-header-content">
            <h1 class="page-title">
                <span class="icon">üïπÔ∏è</span>
                Consoles
            </h1>
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_console_new') }}" class="btn btn-primary">
                    <span class="btn-icon">+</span>
                    Ajouter une console
                </a>
            {% endif %}
        </div>
    </div>

    {# Barre de recherche et filtres #}
    <div class="search-container">
        <form method="get" action="{{ path('app_console_index') }}" class="search-form">
            {# Barre de recherche principale #}
            <div class="search-bar">
                <div class="search-input-wrapper">
                    <span class="search-icon">üîç</span>
                    <input
                        type="text"
                        name="search"
                        class="search-input"
                        placeholder="Rechercher une console (nom, fabricant)..."
                        value="{{ currentFilters.search ?? '' }}"
                    >
                    {% if currentFilters.search %}
                        <a href="{{ path('app_console_index') }}" class="search-clear" title="Effacer la recherche">‚úï</a>
                    {% endif %}
                </div>
                <button type="submit" class="btn btn-primary">
                    Rechercher
                </button>
            </div>

            {# Filtres avanc√©s #}
            <div class="search-filters">
                <div class="filters-toggle" onclick="toggleFilters()">
                    <span class="filters-icon">‚öôÔ∏è</span>
                    <span class="filters-text">Filtres avanc√©s</span>
                    <span class="filters-arrow" id="filters-arrow">‚ñº</span>
                </div>

                <div class="filters-content" id="filters-content">
                    <div class="filters-grid">
                        {# Filtre Fabricant #}
                        <div class="filter-group">
                            <label for="manufacturer" class="filter-label">üè≠ Fabricant</label>
                            <select name="manufacturer" id="manufacturer" class="filter-select">
                                <option value="">Tous les fabricants</option>
                                {% for manufacturer in manufacturers %}
                                    <option value="{{ manufacturer }}" {{ currentFilters.manufacturer == manufacturer ? 'selected' : '' }}>
                                        {{ manufacturer }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        {# Filtre G√©n√©ration #}
                        <div class="filter-group">
                            <label for="generation" class="filter-label">üéØ G√©n√©ration</label>
                            <select name="generation" id="generation" class="filter-select">
                                <option value="">Toutes les g√©n√©rations</option>
                                {% for generation in generations %}
                                    <option value="{{ generation }}" {{ currentFilters.generation == generation ? 'selected' : '' }}>
                                        {{ generation }}·µâ g√©n√©ration
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        {# Filtre Ann√©e #}
                        <div class="filter-group">
                            <label for="year" class="filter-label">üìÖ Ann√©e</label>
                            <select name="year" id="year" class="filter-select">
                                <option value="">Toutes les ann√©es</option>
                                {% for year in years %}
                                    <option value="{{ year }}" {{ currentFilters.year == year ? 'selected' : '' }}>
                                        {{ year }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    {# Recherche alphab√©tique #}
                    <div class="filter-group alphabet-filter">
                        <label class="filter-label">üî§ Recherche alphab√©tique</label>
                        <div class="alphabet-grid">
                            <a href="{{ path('app_console_index') }}"
                               class="alphabet-btn {{ currentFilters.letter is empty ? 'active' : '' }}"
                               title="Toutes">
                                Toutes
                            </a>
                            {% for letter in alphabet %}
                                <a href="{{ path('app_console_index', {letter: letter}) }}"
                                   class="alphabet-btn {{ currentFilters.letter == letter ? 'active' : '' }}"
                                   title="Commence par {{ letter }}">
                                    {{ letter }}
                                </a>
                            {% endfor %}
                        </div>
                    </div>

                    {# Actions des filtres #}
                    <div class="filters-actions">
                        <button type="submit" class="btn btn-primary">
                            ‚úì Appliquer les filtres
                        </button>
                        <a href="{{ path('app_console_index') }}" class="btn btn-outline">
                            ‚úï R√©initialiser
                        </a>
                    </div>
                </div>
            </div>
        </form>

        {# R√©sum√© des filtres actifs #}
        {% if currentFilters.search or currentFilters.manufacturer or currentFilters.generation or currentFilters.year or currentFilters.letter %}
            <div class="active-filters">
                <span class="active-filters-label">Filtres actifs :</span>
                <div class="active-filters-list">
                    {% if currentFilters.search %}
                        <span class="filter-tag">
                            üîç "{{ currentFilters.search }}"
                            <a href="{{ path('app_console_index', currentFilters|filter((v, k) => k != 'search')) }}" class="filter-tag-remove">‚úï</a>
                        </span>
                    {% endif %}
                    {% if currentFilters.manufacturer %}
                        <span class="filter-tag">
                            üè≠ {{ currentFilters.manufacturer }}
                            <a href="{{ path('app_console_index', currentFilters|filter((v, k) => k != 'manufacturer')) }}" class="filter-tag-remove">‚úï</a>
                        </span>
                    {% endif %}
                    {% if currentFilters.generation %}
                        <span class="filter-tag">
                            üéØ G√©n√©ration {{ currentFilters.generation }}
                            <a href="{{ path('app_console_index', currentFilters|filter((v, k) => k != 'generation')) }}" class="filter-tag-remove">‚úï</a>
                        </span>
                    {% endif %}
                    {% if currentFilters.year %}
                        <span class="filter-tag">
                            üìÖ {{ currentFilters.year }}
                            <a href="{{ path('app_console_index', currentFilters|filter((v, k) => k != 'year')) }}" class="filter-tag-remove">‚úï</a>
                        </span>
                    {% endif %}
                    {% if currentFilters.letter %}
                        <span class="filter-tag">
                            üî§ {{ currentFilters.letter }}
                            <a href="{{ path('app_console_index', currentFilters|filter((v, k) => k != 'letter')) }}" class="filter-tag-remove">‚úï</a>
                        </span>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        {# Compteur de r√©sultats #}
        <div class="search-results-count">
            <strong>{{ consoles|length }}</strong> console{{ consoles|length > 1 ? 's' : '' }} trouv√©e{{ consoles|length > 1 ? 's' : '' }}
        </div>
    </div>

    {% if consoles is empty %}
        <div class="empty-state">
            <div class="empty-state-icon">üïπÔ∏è</div>
            <h2 class="empty-state-title">Aucune console pour le moment</h2>
            <p class="empty-state-text">Commencez √† documenter votre collection de consoles !</p>
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_console_new') }}" class="btn btn-primary">Ajouter votre premi√®re console</a>
            {% endif %}
        </div>
    {% else %}
        <div class="cards-grid">
            {% for console in consoles %}
                <div class="card-item">
                    {% if console.image %}
                        <div class="card-image" style="background-image: url('{{ console.image }}');">
                            <div class="card-image-overlay"></div>
                        </div>
                    {% else %}
                        <div class="card-image card-image-placeholder">
                            <span class="placeholder-icon">üïπÔ∏è</span>
                        </div>
                    {% endif %}

                    <div class="card-content">
                        <h3 class="card-title">{{ console.name }}</h3>

                        <div class="card-meta">
                            {% if console.manufacturer %}
                                <span class="meta-item">
                                    <span class="meta-label">Fabricant</span>
                                    <span class="meta-value">{{ console.manufacturer }}</span>
                                </span>
                            {% endif %}

                            {% if console.generation %}
                                <span class="meta-item">
                                    <span class="meta-label">G√©n√©ration</span>
                                    <span class="meta-value">{{ console.generation }}</span>
                                </span>
                            {% endif %}

                            {% if console.releaseDate %}
                                <span class="meta-item">
                                    <span class="meta-label">Sortie</span>
                                    <span class="meta-value">{{ console.releaseDate|date('d/m/Y') }}</span>
                                </span>
                            {% endif %}

                            {% if console.maxPlayers %}
                                <span class="meta-item">
                                    <span class="meta-label">Joueurs max</span>
                                    <span class="meta-value">{{ console.maxPlayers }}</span>
                                </span>
                            {% endif %}
                        </div>

                        <div class="card-actions">
                            <a href="{{ path('app_console_show', {'id': console.id}) }}" class="btn btn-secondary btn-sm">
                                Voir d√©tails
                            </a>

                            {% if is_granted('edit', console) %}
                                <a href="{{ path('app_console_edit', {'id': console.id}) }}" class="btn btn-outline btn-sm" title="Modifier">
                                    ‚úèÔ∏è
                                </a>
                            {% endif %}

                            {% if is_granted('delete', console) %}
                                <form method="post" action="{{ path('app_console_delete', {'id': console.id}) }}" class="inline-form" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette console ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ console.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Supprimer">üóëÔ∏è</button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <script>
        function toggleFilters() {
            const content = document.getElementById('filters-content');
            const arrow = document.getElementById('filters-arrow');

            if (content.style.display === 'none' || content.style.display === '') {
                content.style.display = 'block';
                arrow.textContent = '‚ñ≤';
            } else {
                content.style.display = 'none';
                arrow.textContent = '‚ñº';
            }
        }

        // Ouvrir les filtres automatiquement si des filtres sont actifs
        document.addEventListener('DOMContentLoaded', function() {
            const hasActiveFilters = {{ (currentFilters.manufacturer or currentFilters.generation or currentFilters.year) ? 'true' : 'false' }};
            if (hasActiveFilters) {
                document.getElementById('filters-content').style.display = 'block';
                document.getElementById('filters-arrow').textContent = '‚ñ≤';
            }
        });
    </script>
{% endblock %}

