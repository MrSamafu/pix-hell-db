{% extends 'base.html.twig' %}

{% block title %}Recherche dans les collections - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Recherche dans les collections</h1>
            <a href="{{ path('app_collection_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour
            </a>
        </div>

        <!-- Formulaire de recherche -->
        <div class="card mb-4">
            <div class="card-body">
                <form action="{{ path('app_collection_search') }}" method="get">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label for="search-query" class="form-label">Rechercher</label>
                            <input type="text"
                                   class="form-control"
                                   id="search-query"
                                   name="q"
                                   value="{{ query }}"
                                   placeholder="Nom de l'objet..."
                                   required>
                        </div>
                        <div class="col-md-4">
                            <label for="search-type" class="form-label">Type</label>
                            <select class="form-select" id="search-type" name="type">
                                <option value="all" {% if type == 'all' %}selected{% endif %}>Tous</option>
                                <option value="game" {% if type == 'game' %}selected{% endif %}>Jeux</option>
                                <option value="console" {% if type == 'console' %}selected{% endif %}>Consoles</option>
                                <option value="accessory" {% if type == 'accessory' %}selected{% endif %}>Accessoires</option>
                            </select>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-search me-2"></i>Rechercher
                        </button>
                    </div>
                </form>
            </div>
        </div>

        {% if query %}
            <!-- Résultats pour les jeux -->
            {% if type == 'all' or type == 'game' %}
                {% if results.games is not empty %}
                    <div class="mb-5">
                        <h2 class="h4 mb-3">
                            <i class="fas fa-gamepad me-2 text-primary"></i>Jeux trouvés
                        </h2>
                        <div class="row g-3">
                            {% for result in results.games %}
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100">
                                        {% if result.item.image %}
                                            <img src="{{ result.item.image }}" class="card-img-top" alt="{{ result.item.title }}" style="height: 200px; object-fit: cover;">
                                        {% endif %}
                                        <div class="card-body">
                                            <h5 class="card-title">{{ result.item.title }}</h5>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    <i class="fas fa-gamepad me-1"></i>{{ result.item.platform.name ?? 'N/A' }}
                                                </small>
                                            </p>

                                            <div class="mt-3">
                                                <strong class="d-block mb-2">Possédé par :</strong>
                                                {% if result.owners is not empty %}
                                                    <div class="list-group list-group-flush">
                                                        {% for owner in result.owners %}
                                                            <a href="{{ path('app_collection_user', {'id': owner.id}) }}"
                                                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-2">
                                                                <span>
                                                                    <i class="fas fa-user me-2"></i>{{ owner.username }}
                                                                </span>
                                                                <span class="badge bg-primary rounded-pill">{{ owner.quantity }}</span>
                                                            </a>
                                                        {% endfor %}
                                                    </div>
                                                {% else %}
                                                    <p class="text-muted small">Personne ne possède ce jeu</p>
                                                {% endif %}
                                            </div>

                                            <div class="mt-3">
                                                <a href="{{ path('app_game_show', {'id': result.item.id}) }}" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-info-circle me-1"></i>Détails
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            {% endif %}

            <!-- Résultats pour les consoles -->
            {% if type == 'all' or type == 'console' %}
                {% if results.consoles is not empty %}
                    <div class="mb-5">
                        <h2 class="h4 mb-3">
                            <i class="fas fa-tv me-2 text-success"></i>Consoles trouvées
                        </h2>
                        <div class="row g-3">
                            {% for result in results.consoles %}
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100">
                                        {% if result.item.image %}
                                            <img src="{{ result.item.image }}" class="card-img-top" alt="{{ result.item.name }}" style="height: 200px; object-fit: cover;">
                                        {% endif %}
                                        <div class="card-body">
                                            <h5 class="card-title">{{ result.item.name }}</h5>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    <i class="fas fa-industry me-1"></i>{{ result.item.manufacturer ?? 'N/A' }}
                                                </small>
                                            </p>

                                            <div class="mt-3">
                                                <strong class="d-block mb-2">Possédé par :</strong>
                                                {% if result.owners is not empty %}
                                                    <div class="list-group list-group-flush">
                                                        {% for owner in result.owners %}
                                                            <a href="{{ path('app_collection_user', {'id': owner.id}) }}"
                                                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-2">
                                                                <span>
                                                                    <i class="fas fa-user me-2"></i>{{ owner.username }}
                                                                </span>
                                                                <span class="badge bg-success rounded-pill">{{ owner.quantity }}</span>
                                                            </a>
                                                        {% endfor %}
                                                    </div>
                                                {% else %}
                                                    <p class="text-muted small">Personne ne possède cette console</p>
                                                {% endif %}
                                            </div>

                                            <div class="mt-3">
                                                <a href="{{ path('app_console_show', {'id': result.item.id}) }}" class="btn btn-sm btn-outline-success">
                                                    <i class="fas fa-info-circle me-1"></i>Détails
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            {% endif %}

            <!-- Résultats pour les accessoires -->
            {% if type == 'all' or type == 'accessory' %}
                {% if results.accessories is not empty %}
                    <div class="mb-5">
                        <h2 class="h4 mb-3">
                            <i class="fas fa-plug me-2 text-warning"></i>Accessoires trouvés
                        </h2>
                        <div class="row g-3">
                            {% for result in results.accessories %}
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100">
                                        {% if result.item.image %}
                                            <img src="{{ result.item.image }}" class="card-img-top" alt="{{ result.item.name }}" style="height: 200px; object-fit: cover;">
                                        {% endif %}
                                        <div class="card-body">
                                            <h5 class="card-title">{{ result.item.name }}</h5>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    <i class="fas fa-tag me-1"></i>{{ result.item.type ?? 'N/A' }}
                                                </small>
                                            </p>

                                            <div class="mt-3">
                                                <strong class="d-block mb-2">Possédé par :</strong>
                                                {% if result.owners is not empty %}
                                                    <div class="list-group list-group-flush">
                                                        {% for owner in result.owners %}
                                                            <a href="{{ path('app_collection_user', {'id': owner.id}) }}"
                                                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-2">
                                                                <span>
                                                                    <i class="fas fa-user me-2"></i>{{ owner.username }}
                                                                </span>
                                                                <span class="badge bg-warning rounded-pill">{{ owner.quantity }}</span>
                                                            </a>
                                                        {% endfor %}
                                                    </div>
                                                {% else %}
                                                    <p class="text-muted small">Personne ne possède cet accessoire</p>
                                                {% endif %}
                                            </div>

                                            <div class="mt-3">
                                                <a href="{{ path('app_accessory_show', {'id': result.item.id}) }}" class="btn btn-sm btn-outline-warning">
                                                    <i class="fas fa-info-circle me-1"></i>Détails
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            {% endif %}

            <!-- Aucun résultat -->
            {% if results.games is empty and results.consoles is empty and results.accessories is empty %}
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle me-2"></i>
                    Aucun résultat trouvé pour "{{ query }}"
                </div>
            {% endif %}
        {% else %}
            <div class="alert alert-secondary text-center">
                <i class="fas fa-search me-2"></i>
                Utilisez le formulaire ci-dessus pour rechercher dans les collections
            </div>
        {% endif %}
    </div>
{% endblock %}

