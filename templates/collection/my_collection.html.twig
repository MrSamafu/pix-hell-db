{% extends 'base.html.twig' %}

{% block title %}Ma Collection - {{ parent() }}{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="page-header-content">
            <h1 class="page-title">
                <span class="icon">üì¶</span>
                Ma Collection
            </h1>
            <a href="{{ path('app_collection_index') }}" class="btn btn--secondary">
                ‚Üê Retour
            </a>
        </div>
    </div>

    <div class="container">
        <!-- Statistiques -->
        <div class="collection-stats mb-xl">
            <div class="stat-card">
                <div class="stat-icon">üéÆ</div>
                <div class="stat-value">{{ total_games }}</div>
                <div class="stat-label">Jeux</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">üì∫</div>
                <div class="stat-value">{{ total_consoles }}</div>
                <div class="stat-label">Consoles</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">üéß</div>
                <div class="stat-value">{{ total_accessories }}</div>
                <div class="stat-label">Accessoires</div>
            </div>
        </div>

        <!-- Navigation par onglets -->
        <ul class="nav nav-tabs mb-lg" id="collectionTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="games-tab" data-bs-toggle="tab" data-bs-target="#games" type="button" role="tab">
                    üéÆ Jeux <span class="badge badge--primary ml-sm">{{ game_collections|length }}</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="consoles-tab" data-bs-toggle="tab" data-bs-target="#consoles" type="button" role="tab">
                    üì∫ Consoles <span class="badge badge--secondary ml-sm">{{ console_collections|length }}</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="accessories-tab" data-bs-toggle="tab" data-bs-target="#accessories" type="button" role="tab">
                    üéß Accessoires <span class="badge badge--accent ml-sm">{{ accessory_collections|length }}</span>
                </button>
            </li>
        </ul>

        <!-- Contenu des onglets -->
        <div class="tab-content" id="collectionTabsContent">
            <!-- Onglet Jeux -->
            <div class="tab-pane fade show active" id="games" role="tabpanel">
                {% if game_collections %}
                    <div class="grid grid--3">
                        {% for collection in game_collections %}
                            <div class="card collection-item" data-collection-id="{{ collection.id }}">
                                {% if collection.game.image %}
                                    <img src="{{ collection.game.image }}" class="card__image" alt="{{ collection.game.title }}">
                                {% else %}
                                    <div class="card__image" style="display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, rgba(103, 97, 168, 0.3), rgba(160, 193, 185, 0.3));">
                                        <span style="font-size: 3rem; opacity: 0.5;">üéÆ</span>
                                    </div>
                                {% endif %}
                                <div class="card__body">
                                    <h3 class="card__title">{{ collection.game.title }}</h3>
                                    <p class="card__text text--muted mb-md">
                                        <small>{{ collection.game.platform.name ?? 'N/A' }}</small>
                                    </p>

                                    <div class="item-controls">
                                        <label class="form__label">Quantit√©</label>
                                        <input type="number"
                                               class="quantity-input"
                                               value="{{ collection.quantity }}"
                                               min="1"
                                               data-type="game"
                                               data-id="{{ collection.id }}">

                                        <label class="form__label mt-sm">Note personnelle</label>
                                        <textarea class="note-input"
                                                  rows="2"
                                                  data-type="game"
                                                  data-id="{{ collection.id }}"
                                                  placeholder="√âtat, provenance...">{{ collection.note }}</textarea>
                                    </div>
                                </div>
                                <div class="card__footer">
                                    <button class="btn btn--primary btn--small update-btn"
                                            data-type="game"
                                            data-id="{{ collection.id }}">
                                        üíæ Sauvegarder
                                    </button>
                                    <button class="btn btn--danger btn--small delete-btn"
                                            data-type="game"
                                            data-id="{{ collection.id }}"
                                            title="Retirer">
                                        üóëÔ∏è
                                    </button>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text--center" style="padding: 3rem;">
                        <p style="font-size: 3rem; margin-bottom: 1rem;">üéÆ</p>
                        <p class="text--muted mb-md">Aucun jeu dans votre collection</p>
                        <a href="{{ path('app_game_index') }}" class="btn btn--primary">
                            Parcourir les jeux
                        </a>
                    </div>
                {% endif %}
            </div>

            <!-- Onglet Consoles -->
            <div class="tab-pane fade" id="consoles" role="tabpanel">
                {% if console_collections %}
                    <div class="grid grid--3">
                        {% for collection in console_collections %}
                            <div class="card collection-item" data-collection-id="{{ collection.id }}">
                                {% if collection.console.image %}
                                    <img src="{{ collection.console.image }}" class="card__image" alt="{{ collection.console.name }}">
                                {% else %}
                                    <div class="card__image" style="display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, rgba(160, 193, 185, 0.3), rgba(103, 97, 168, 0.3));">
                                        <span style="font-size: 3rem; opacity: 0.5;">üì∫</span>
                                    </div>
                                {% endif %}
                                <div class="card__body">
                                    <h3 class="card__title">{{ collection.console.name }}</h3>
                                    <p class="card__text text--muted mb-md">
                                        <small>{{ collection.console.manufacturer ?? 'N/A' }}</small>
                                    </p>

                                    <div class="item-controls">
                                        <label class="form__label">Quantit√©</label>
                                        <input type="number"
                                               class="quantity-input"
                                               value="{{ collection.quantity }}"
                                               min="1"
                                               data-type="console"
                                               data-id="{{ collection.id }}">

                                        <label class="form__label mt-sm">Note personnelle</label>
                                        <textarea class="note-input"
                                                  rows="2"
                                                  data-type="console"
                                                  data-id="{{ collection.id }}"
                                                  placeholder="√âtat, provenance...">{{ collection.note }}</textarea>
                                    </div>
                                </div>
                                <div class="card__footer">
                                    <button class="btn btn--secondary btn--small update-btn"
                                            data-type="console"
                                            data-id="{{ collection.id }}">
                                        üíæ Sauvegarder
                                    </button>
                                    <button class="btn btn--danger btn--small delete-btn"
                                            data-type="console"
                                            data-id="{{ collection.id }}"
                                            title="Retirer">
                                        üóëÔ∏è
                                    </button>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text--center" style="padding: 3rem;">
                        <p style="font-size: 3rem; margin-bottom: 1rem;">üì∫</p>
                        <p class="text--muted mb-md">Aucune console dans votre collection</p>
                        <a href="{{ path('app_console_index') }}" class="btn btn--secondary">
                            Parcourir les consoles
                        </a>
                    </div>
                {% endif %}
            </div>

            <!-- Onglet Accessoires -->
            <div class="tab-pane fade" id="accessories" role="tabpanel">
                {% if accessory_collections %}
                    <div class="grid grid--3">
                        {% for collection in accessory_collections %}
                            <div class="card collection-item" data-collection-id="{{ collection.id }}">
                                {% if collection.accessory.image %}
                                    <img src="{{ collection.accessory.image }}" class="card__image" alt="{{ collection.accessory.name }}">
                                {% else %}
                                    <div class="card__image" style="display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, rgba(163, 0, 21, 0.3), rgba(103, 97, 168, 0.3));">
                                        <span style="font-size: 3rem; opacity: 0.5;">üéß</span>
                                    </div>
                                {% endif %}
                                <div class="card__body">
                                    <h3 class="card__title">{{ collection.accessory.name }}</h3>
                                    <p class="card__text text--muted mb-md">
                                        <small>{{ collection.accessory.type ?? 'N/A' }}</small>
                                    </p>

                                    <div class="item-controls">
                                        <label class="form__label">Quantit√©</label>
                                        <input type="number"
                                               class="quantity-input"
                                               value="{{ collection.quantity }}"
                                               min="1"
                                               data-type="accessory"
                                               data-id="{{ collection.id }}">

                                        <label class="form__label mt-sm">Note personnelle</label>
                                        <textarea class="note-input"
                                                  rows="2"
                                                  data-type="accessory"
                                                  data-id="{{ collection.id }}"
                                                  placeholder="√âtat, provenance...">{{ collection.note }}</textarea>
                                    </div>
                                </div>
                                <div class="card__footer">
                                    <button class="btn btn--accent btn--small update-btn"
                                            data-type="accessory"
                                            data-id="{{ collection.id }}">
                                        üíæ Sauvegarder
                                    </button>
                                    <button class="btn btn--danger btn--small delete-btn"
                                            data-type="accessory"
                                            data-id="{{ collection.id }}"
                                            title="Retirer">
                                        üóëÔ∏è
                                    </button>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text--center" style="padding: 3rem;">
                        <p style="font-size: 3rem; margin-bottom: 1rem;">üéß</p>
                        <p class="text--muted mb-md">Aucun accessoire dans votre collection</p>
                        <a href="{{ path('app_accessory_index') }}" class="btn btn--accent">
                            Parcourir les accessoires
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Gestion des mises √† jour
            document.querySelectorAll('.update-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const type = this.dataset.type;
                    const id = this.dataset.id;
                    const card = this.closest('[data-collection-id]');
                    const quantity = card.querySelector('.quantity-input').value;
                    const note = card.querySelector('.note-input').value;

                    fetch(`/collection/${type}/${id}/update`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: `quantity=${quantity}&note=${encodeURIComponent(note)}`
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('Collection mise √† jour avec succ√®s !');
                        } else {
                            alert('Erreur : ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Erreur:', error);
                        alert('Une erreur est survenue');
                    });
                });
            });

            // Gestion des suppressions
            document.querySelectorAll('.delete-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    if (!confirm('√ätes-vous s√ªr de vouloir retirer cet √©l√©ment de votre collection ?')) {
                        return;
                    }

                    const type = this.dataset.type;
                    const id = this.dataset.id;
                    const card = this.closest('[data-collection-id]');

                    fetch(`/collection/${type}/${id}/delete`, {
                        method: 'POST'
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            card.remove();
                            alert('√âl√©ment retir√© de la collection');
                            location.reload();
                        } else {
                            alert('Erreur : ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Erreur:', error);
                        alert('Une erreur est survenue');
                    });
                });
            });
        });
    </script>
{% endblock %}

