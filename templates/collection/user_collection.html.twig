{% extends 'base.html.twig' %}

{% block title %}Collection de {{ user.username }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="page-header-content">
            <h1 class="page-title">
                <span class="icon">üë§</span>
                Collection de {{ user.username }}
            </h1>
            <a href="{{ path('app_collection_index') }}" class="btn btn--secondary">
                ‚Üê Retour
            </a>
        </div>
    </div>

    <div class="container">
        <!-- Statistiques -->
        <div class="collection-stats mb-xl">
            <div class="stat-card">
                <div class="stat-icon">üéÆ</div>
                <div class="stat-value">{{ total_games }}</div>
                <div class="stat-label">Jeux</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">üì∫</div>
                <div class="stat-value">{{ total_consoles }}</div>
                <div class="stat-label">Consoles</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">üéß</div>
                <div class="stat-value">{{ total_accessories }}</div>
                <div class="stat-label">Accessoires</div>
            </div>
        </div>

        <!-- Navigation par onglets -->
        <ul class="nav nav-tabs mb-lg" id="collectionTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="games-tab" data-bs-toggle="tab" data-bs-target="#games" type="button" role="tab">
                    üéÆ Jeux <span class="badge badge--primary ml-sm">{{ game_collections|length }}</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="consoles-tab" data-bs-toggle="tab" data-bs-target="#consoles" type="button" role="tab">
                    üì∫ Consoles <span class="badge badge--secondary ml-sm">{{ console_collections|length }}</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="accessories-tab" data-bs-toggle="tab" data-bs-target="#accessories" type="button" role="tab">
                    üéß Accessoires <span class="badge badge--accent ml-sm">{{ accessory_collections|length }}</span>
                </button>
            </li>
        </ul>

        <!-- Contenu des onglets -->
        <div class="tab-content" id="collectionTabsContent">
            <!-- Onglet Jeux -->
            <div class="tab-pane fade show active" id="games" role="tabpanel">
                {% if game_collections %}
                    <div class="grid grid--3">
                        {% for collection in game_collections %}
                            <div class="card">
                                {% if collection.game.image %}
                                    <img src="{{ collection.game.image }}" class="card__image" alt="{{ collection.game.title }}">
                                {% else %}
                                    <div class="card__image" style="display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, rgba(103, 97, 168, 0.3), rgba(160, 193, 185, 0.3));">
                                        <span style="font-size: 3rem; opacity: 0.5;">üéÆ</span>
                                    </div>
                                {% endif %}
                                <div class="card__body">
                                    <div class="badge badge--primary mb-sm">Jeu</div>
                                    <h3 class="card__title">{{ collection.game.title }}</h3>
                                    <p class="card__text text--muted">
                                        <small>{{ collection.game.platform.name ?? 'N/A' }}</small><br>
                                        <small>üì¶ Quantit√© : {{ collection.quantity }}</small>
                                    </p>
                                    {% if collection.note %}
                                        <div class="owners-box mt-sm">
                                            <strong class="owners-title">üìù Note</strong>
                                            <p style="margin: 0; font-size: 0.875rem;">{{ collection.note }}</p>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="card__footer">
                                    <a href="{{ path('app_game_show', {'id': collection.game.id}) }}" class="btn btn--primary btn--small">
                                        Voir les d√©tails
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text--center" style="padding: 3rem;">
                        <p style="font-size: 3rem; margin-bottom: 1rem;">üéÆ</p>
                        <p class="text--muted">{{ user.username }} n'a aucun jeu dans sa collection</p>
                    </div>
                {% endif %}
            </div>

            <!-- Onglet Consoles -->
            <div class="tab-pane fade" id="consoles" role="tabpanel">
                {% if console_collections %}
                    <div class="grid grid--3">
                        {% for collection in console_collections %}
                            <div class="card">
                                {% if collection.console.image %}
                                    <img src="{{ collection.console.image }}" class="card__image" alt="{{ collection.console.name }}">
                                {% else %}
                                    <div class="card__image" style="display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, rgba(160, 193, 185, 0.3), rgba(103, 97, 168, 0.3));">
                                        <span style="font-size: 3rem; opacity: 0.5;">üì∫</span>
                                    </div>
                                {% endif %}
                                <div class="card__body">
                                    <div class="badge badge--secondary mb-sm">Console</div>
                                    <h3 class="card__title">{{ collection.console.name }}</h3>
                                    <p class="card__text text--muted">
                                        <small>{{ collection.console.manufacturer ?? 'N/A' }}</small><br>
                                        <small>üì¶ Quantit√© : {{ collection.quantity }}</small>
                                    </p>
                                    {% if collection.note %}
                                        <div class="owners-box mt-sm">
                                            <strong class="owners-title">üìù Note</strong>
                                            <p style="margin: 0; font-size: 0.875rem;">{{ collection.note }}</p>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="card__footer">
                                    <a href="{{ path('app_console_show', {'id': collection.console.id}) }}" class="btn btn--secondary btn--small">
                                        Voir les d√©tails
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text--center" style="padding: 3rem;">
                        <p style="font-size: 3rem; margin-bottom: 1rem;">üì∫</p>
                        <p class="text--muted">{{ user.username }} n'a aucune console dans sa collection</p>
                    </div>
                {% endif %}
            </div>

            <!-- Onglet Accessoires -->
            <div class="tab-pane fade" id="accessories" role="tabpanel">
                {% if accessory_collections %}
                    <div class="grid grid--3">
                        {% for collection in accessory_collections %}
                            <div class="card">
                                {% if collection.accessory.image %}
                                    <img src="{{ collection.accessory.image }}" class="card__image" alt="{{ collection.accessory.name }}">
                                {% else %}
                                    <div class="card__image" style="display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, rgba(163, 0, 21, 0.3), rgba(103, 97, 168, 0.3));">
                                        <span style="font-size: 3rem; opacity: 0.5;">üéß</span>
                                    </div>
                                {% endif %}
                                <div class="card__body">
                                    <div class="badge badge--accent mb-sm">Accessoire</div>
                                    <h3 class="card__title">{{ collection.accessory.name }}</h3>
                                    <p class="card__text text--muted">
                                        <small>{{ collection.accessory.type ?? 'N/A' }}</small><br>
                                        <small>üì¶ Quantit√© : {{ collection.quantity }}</small>
                                    </p>
                                    {% if collection.note %}
                                        <div class="owners-box mt-sm">
                                            <strong class="owners-title">üìù Note</strong>
                                            <p style="margin: 0; font-size: 0.875rem;">{{ collection.note }}</p>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="card__footer">
                                    <a href="{{ path('app_accessory_show', {'id': collection.accessory.id}) }}" class="btn btn--accent btn--small">
                                        Voir les d√©tails
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text--center" style="padding: 3rem;">
                        <p style="font-size: 3rem; margin-bottom: 1rem;">üéß</p>
                        <p class="text--muted">{{ user.username }} n'a aucun accessoire dans sa collection</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

