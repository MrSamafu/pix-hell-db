{% extends 'base.html.twig' %}

{% block title %}{{ game.title }} - {{ parent() }}{% endblock %}

{% block body %}
    {# Header avec actions #}
    <div class="page-header">
        <div class="page-header-content">
            <a href="{{ path('app_game_index') }}" class="btn btn-outline btn-sm">
                ‚Üê Retour √† la liste
            </a>

            <div class="btn-actions">
                {% if is_granted('edit', game) %}
                    <a href="{{ path('app_game_edit', {'id': game.id}) }}" class="btn btn-outline btn-sm">
                        ‚úèÔ∏è Modifier
                    </a>
                {% endif %}
                {% if is_granted('delete', game) %}
                    <form method="post" action="{{ path('app_game_delete', {'id': game.id}) }}" class="inline-form" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce jeu ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game.id) }}">
                        <button type="submit" class="btn btn-danger btn-sm">üóëÔ∏è Supprimer</button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>

    {# Contenu principal #}
    <div class="detail-container">
        <div class="detail-main">
            {# Image du jeu #}
            <div class="detail-image">
                {% if game.image %}
                    <img src="{{ game.image }}" alt="{{ game.title }}" class="detail-image-img">
                {% else %}
                    <div class="detail-image-placeholder">
                        <span class="placeholder-icon">üéÆ</span>
                        <p>Aucune image</p>
                    </div>
                {% endif %}
            </div>

            {# Informations principales #}
            <div class="detail-content">
                <h1 class="detail-title">{{ game.title }}</h1>

                {# Tags rapides #}
                <div class="detail-tags">
                    {% if game.platform %}
                        <span class="tag tag-platform">üïπÔ∏è {{ game.platform.name }}</span>
                    {% endif %}
                    {% if game.series %}
                        <span class="tag tag-series">üìö {{ game.series }}</span>
                    {% endif %}
                </div>

                {# Description #}
                {% if game.description %}
                    <div class="detail-section">
                        <h2 class="detail-section-title">üìñ Description</h2>
                        <p class="detail-description">{{ game.description|nl2br }}</p>
                    </div>
                {% endif %}

                {# Informations d√©taill√©es #}
                <div class="detail-section">
                    <h2 class="detail-section-title">‚ÑπÔ∏è Informations</h2>
                    <div class="detail-info-grid">
                        {% if game.developer %}
                            <div class="info-item">
                                <span class="info-label">D√©veloppeur</span>
                                <span class="info-value">{{ game.developer }}</span>
                            </div>
                        {% endif %}

                        {% if game.publisher %}
                            <div class="info-item">
                                <span class="info-label">√âditeur</span>
                                <span class="info-value">{{ game.publisher }}</span>
                            </div>
                        {% endif %}

                        {% if game.releaseDate %}
                            <div class="info-item">
                                <span class="info-label">Date de sortie</span>
                                <span class="info-value">{{ game.releaseDate|date('d/m/Y') }}</span>
                            </div>
                        {% endif %}

                        {% if game.createdAt %}
                            <div class="info-item">
                                <span class="info-label">Ajout√© le</span>
                                <span class="info-value">{{ game.createdAt|date('d/m/Y √† H:i') }}</span>
                            </div>
                        {% endif %}
                    </div>
                </div>

                {# Genres #}
                {% if game.genres is not empty %}
                    <div class="detail-section">
                        <h2 class="detail-section-title">üéØ Genres</h2>
                        <div class="card-tags">
                            {% for genre in game.genres %}
                                <span class="tag">{{ genre.name }}</span>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                {# Modes de jeu #}
                {% if game.modes is not empty %}
                    <div class="detail-section">
                        <h2 class="detail-section-title">üéÆ Modes de jeu</h2>
                        <div class="card-tags">
                            {% for mode in game.modes %}
                                <span class="tag">{{ mode.name }}</span>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        {# Sidebar - Ajout √† la collection #}
        {% if is_granted('ROLE_USER') %}
            <div class="detail-sidebar">
                <div class="collection-card">
                    <div class="collection-card-header">
                        <h3 class="collection-card-title">üì¶ Ma Collection</h3>
                    </div>

                    <div class="collection-card-body">
                        <form method="post" action="{{ path('app_game_add_to_collection', {'id': game.id}) }}" class="collection-form">
                            <div class="form__group">
                                <label for="quantity" class="form__label">
                                    Nombre d'exemplaires
                                </label>
                                <div class="quantity-input">
                                    <button type="button" class="quantity-btn quantity-minus" onclick="decreaseQuantity()">‚àí</button>
                                    <input
                                        type="number"
                                        id="quantity"
                                        name="quantity"
                                        class="quantity-field"
                                        value="1"
                                        min="1"
                                        max="99"
                                        required
                                    >
                                    <button type="button" class="quantity-btn quantity-plus" onclick="increaseQuantity()">+</button>
                                </div>
                                <small class="form-help">
                                    Indiquez combien d'exemplaires vous poss√©dez
                                </small>
                            </div>

                            <button type="submit" class="btn btn-primary btn-block">
                                <span class="btn-icon">+</span>
                                Ajouter √† ma collection
                            </button>
                        </form>
                    </div>

                    <div class="collection-card-footer">
                        <p class="collection-hint">
                            üí° Vous pourrez g√©rer vos jeux depuis votre collection
                        </p>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>

    <script>
        function increaseQuantity() {
            const input = document.getElementById('quantity');
            const currentValue = parseInt(input.value) || 1;
            if (currentValue < 99) {
                input.value = currentValue + 1;
            }
        }

        function decreaseQuantity() {
            const input = document.getElementById('quantity');
            const currentValue = parseInt(input.value) || 1;
            if (currentValue > 1) {
                input.value = currentValue - 1;
            }
        }
    </script>
{% endblock %}
