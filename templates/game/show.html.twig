{% extends 'base.html.twig' %}

{% block title %}{{ game.title }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h1 class="h2 mb-0">{{ game.title }}</h1>
            <div class="btn-group">
                {% if is_granted('edit', game) %}
                    <a href="{{ path('app_game_edit', {'id': game.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                {% endif %}
                {% if is_granted('delete', game) %}
                    <form method="post" action="{{ path('app_game_delete', {'id': game.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce jeu ?');" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game.id) }}">
                        <button class="btn btn-danger">
                            <i class="fas fa-trash"></i> Supprimer
                        </button>
                    </form>
                {% endif %}
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h3>Description</h3>
                    <p>{{ game.description|nl2br }}</p>

                    <h3>Informations</h3>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Plateforme</th>
                                <td>{{ game.platform }}</td>
                            </tr>
                            <tr>
                                <th>Genres</th>
                                <td>
                                    {% for g in game.genres %}
                                        {{ g.name }}{% if not loop.last %}, {% endif %}
                                    {% else %}
                                        Aucun
                                    {% endfor %}
                                </td>
                            </tr>
                            <tr>
                                <th>Modes</th>
                                <td>
                                    {% for m in game.modes %}
                                        {{ m.name }}{% if not loop.last %}, {% endif %}
                                    {% else %}
                                        Aucun
                                    {% endfor %}
                                </td>
                            </tr>
                            <tr>
                                <th>Date de sortie</th>
                                <td>{{ game.releaseDate ? game.releaseDate|date('d/m/Y') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Développeur</th>
                                <td>{{ game.developer }}</td>
                            </tr>
                            <tr>
                                <th>Éditeur</th>
                                <td>{{ game.publisher }}</td>
                            </tr>
                            <tr>
                                <th>Série</th>
                                <td>{{ game.series }}</td>
                            </tr>
                            <tr>
                                <th>Date d'enregistrement</th>
                                <td>{{ game.createdAt ? game.createdAt|date('d/m/Y H:i') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-4">
                    {% if game.image %}
                        <div class="mb-3 text-center">
                            <img src="{{ asset(game.image) }}" alt="{{ game.title }}" class="img-fluid" />
                        </div>
                    {% endif %}
                     {% if is_granted('ROLE_USER') %}
                         <div class="card">
                             <div class="card-body">
                                 <h4>Ajouter à ma collection</h4>
                                 <form method="post" action="{{ path('app_game_add_to_collection', {'id': game.id}) }}">
                                     <div class="mb-3">
                                         <label for="quantity" class="form-label">Quantité</label>
                                         <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1">
                                     </div>
                                     <button type="submit" class="btn btn-primary">
                                         <i class="fas fa-plus"></i> Ajouter
                                     </button>
                                 </form>
                             </div>
                         </div>
                     {% endif %}
                 </div>
             </div>
         </div>
     </div>

     <div class="mt-3">
         <a href="{{ path('app_game_index') }}" class="btn btn-secondary">
             <i class="fas fa-arrow-left"></i> Retour à la liste
         </a>
     </div>
 {% endblock %}
