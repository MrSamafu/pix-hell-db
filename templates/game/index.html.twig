{% extends 'base.html.twig' %}

{% block title %}Liste des jeux - {{ parent() }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des jeux vidéo</h1>
        <a href="{{ path('app_game_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Ajouter un jeu
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Plateforme</th>
                    <th>Genres</th>
                    <th>Date de sortie</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for game in games %}
                    <tr>
                        <td>{{ game.title }}</td>
                        <td>{{ game.platform }}</td>
                        <td>
                            {% for g in game.genres %}
                                {{ g.name }}{% if not loop.last %}, {% endif %}
                            {% else %}
                                -
                            {% endfor %}
                        </td>
                        <td>{{ game.releaseDate ? game.releaseDate|date('d/m/Y') : '' }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_game_show', {'id': game.id}) }}" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                                {% if is_granted('edit', game) %}
                                    <a href="{{ path('app_game_edit', {'id': game.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                {% endif %}
                                {% if is_granted('delete', game) %}
                                    <form method="post" action="{{ path('app_game_delete', {'id': game.id}) }}" style="display:inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce jeu ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game.id) }}">
                                        <button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                                    </form>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucun jeu trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
