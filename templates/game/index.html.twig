{% extends 'base.html.twig' %}

{% block title %}Jeux Vid√©o - {{ parent() }}{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="page-header-content">
            <h1 class="page-title">
                <span class="icon">üéÆ</span>
                Jeux Vid√©o
            </h1>
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_game_new') }}" class="btn btn-primary">
                    <span class="btn-icon">+</span>
                    Ajouter un jeu
                </a>
            {% endif %}
        </div>
    </div>

    {# Barre de recherche et filtres #}
    <div class="search-container">
        <form method="get" action="{{ path('app_game_index') }}" class="search-form">
            {# Barre de recherche principale #}
            <div class="search-bar">
                <div class="search-input-wrapper">
                    <span class="search-icon">üîç</span>
                    <input
                        type="text"
                        name="search"
                        class="search-input"
                        placeholder="Rechercher un jeu (titre, s√©rie, √©diteur, d√©veloppeur)..."
                        value="{{ currentFilters.search ?? '' }}"
                    >
                    {% if currentFilters.search %}
                        <a href="{{ path('app_game_index') }}" class="search-clear" title="Effacer la recherche">‚úï</a>
                    {% endif %}
                </div>
                <button type="submit" class="btn btn-primary">
                    Rechercher
                </button>
            </div>

            {# Filtres avanc√©s #}
            <div class="search-filters">
                <div class="filters-toggle" onclick="toggleFilters()">
                    <span class="filters-icon">‚öôÔ∏è</span>
                    <span class="filters-text">Filtres avanc√©s</span>
                    <span class="filters-arrow" id="filters-arrow">‚ñº</span>
                </div>

                <div class="filters-content" id="filters-content">
                    <div class="filters-grid">
                        {# Filtre Console/Plateforme #}
                        <div class="filter-group">
                            <label for="platform" class="filter-label">üïπÔ∏è Console</label>
                            <select name="platform" id="platform" class="filter-select">
                                <option value="">Toutes les consoles</option>
                                {% for console in consoles %}
                                    <option value="{{ console.id }}" {{ currentFilters.platform == console.id ? 'selected' : '' }}>
                                        {{ console.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        {# Filtre Ann√©e #}
                        <div class="filter-group">
                            <label for="year" class="filter-label">üìÖ Ann√©e</label>
                            <select name="year" id="year" class="filter-select">
                                <option value="">Toutes les ann√©es</option>
                                {% for year in years %}
                                    <option value="{{ year }}" {{ currentFilters.year == year ? 'selected' : '' }}>
                                        {{ year }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        {# Filtre Genre #}
                        <div class="filter-group">
                            <label for="genre" class="filter-label">üéØ Genre</label>
                            <select name="genre" id="genre" class="filter-select">
                                <option value="">Tous les genres</option>
                                {% for genre in genres %}
                                    <option value="{{ genre.id }}" {{ currentFilters.genre == genre.id ? 'selected' : '' }}>
                                        {{ genre.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        {# Filtre Mode #}
                        <div class="filter-group">
                            <label for="mode" class="filter-label">üéÆ Mode</label>
                            <select name="mode" id="mode" class="filter-select">
                                <option value="">Tous les modes</option>
                                {% for mode in modes %}
                                    <option value="{{ mode.id }}" {{ currentFilters.mode == mode.id ? 'selected' : '' }}>
                                        {{ mode.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    {# Recherche alphab√©tique #}
                    <div class="filter-group alphabet-filter">
                        <label class="filter-label">üî§ Recherche alphab√©tique</label>
                        <div class="alphabet-grid">
                            <a href="{{ path('app_game_index') }}"
                               class="alphabet-btn {{ currentFilters.letter is empty ? 'active' : '' }}"
                               title="Tous">
                                Tous
                            </a>
                            {% for letter in alphabet %}
                                <a href="{{ path('app_game_index', {letter: letter}) }}"
                                   class="alphabet-btn {{ currentFilters.letter == letter ? 'active' : '' }}"
                                   title="Commence par {{ letter }}">
                                    {{ letter }}
                                </a>
                            {% endfor %}
                        </div>
                    </div>

                    {# Actions des filtres #}
                    <div class="filters-actions">
                        <button type="submit" class="btn btn-primary">
                            ‚úì Appliquer les filtres
                        </button>
                        <a href="{{ path('app_game_index') }}" class="btn btn-outline">
                            ‚úï R√©initialiser
                        </a>
                    </div>
                </div>
            </div>
        </form>

        {# R√©sum√© des filtres actifs #}
        {% if currentFilters.search or currentFilters.platform or currentFilters.year or currentFilters.genre or currentFilters.mode or currentFilters.letter %}
            <div class="active-filters">
                <span class="active-filters-label">Filtres actifs :</span>
                <div class="active-filters-list">
                    {% if currentFilters.search %}
                        <span class="filter-tag">
                            üîç "{{ currentFilters.search }}"
                            <a href="{{ path('app_game_index', currentFilters|filter((v, k) => k != 'search')) }}" class="filter-tag-remove">‚úï</a>
                        </span>
                    {% endif %}
                    {% if currentFilters.platform %}
                        <span class="filter-tag">
                            üïπÔ∏è Console
                            <a href="{{ path('app_game_index', currentFilters|filter((v, k) => k != 'platform')) }}" class="filter-tag-remove">‚úï</a>
                        </span>
                    {% endif %}
                    {% if currentFilters.year %}
                        <span class="filter-tag">
                            üìÖ {{ currentFilters.year }}
                            <a href="{{ path('app_game_index', currentFilters|filter((v, k) => k != 'year')) }}" class="filter-tag-remove">‚úï</a>
                        </span>
                    {% endif %}
                    {% if currentFilters.genre %}
                        <span class="filter-tag">
                            üéØ Genre
                            <a href="{{ path('app_game_index', currentFilters|filter((v, k) => k != 'genre')) }}" class="filter-tag-remove">‚úï</a>
                        </span>
                    {% endif %}
                    {% if currentFilters.mode %}
                        <span class="filter-tag">
                            üéÆ Mode
                            <a href="{{ path('app_game_index', currentFilters|filter((v, k) => k != 'mode')) }}" class="filter-tag-remove">‚úï</a>
                        </span>
                    {% endif %}
                    {% if currentFilters.letter %}
                        <span class="filter-tag">
                            üî§ {{ currentFilters.letter }}
                            <a href="{{ path('app_game_index', currentFilters|filter((v, k) => k != 'letter')) }}" class="filter-tag-remove">‚úï</a>
                        </span>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        {# Compteur de r√©sultats #}
        <div class="search-results-count">
            <strong>{{ games|length }}</strong> jeu{{ games|length > 1 ? 'x' : '' }} trouv√©{{ games|length > 1 ? 's' : '' }}
        </div>
    </div>

    {% if games is empty %}
        <div class="empty-state">
            <div class="empty-state-icon">üéÆ</div>
            <h2 class="empty-state-title">Aucun jeu pour le moment</h2>
            <p class="empty-state-text">Commencez √† construire votre biblioth√®que de jeux !</p>
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_game_new') }}" class="btn btn-primary">Ajouter votre premier jeu</a>
            {% endif %}
        </div>
    {% else %}
        <div class="cards-grid">
            {% for game in games %}
                <div class="card-item">
                    {% if game.image %}
                        <div class="card-image" style="background-image: url('{{ game.image }}');">
                            <div class="card-image-overlay"></div>
                        </div>
                    {% else %}
                        <div class="card-image card-image-placeholder">
                            <span class="placeholder-icon">üéÆ</span>
                        </div>
                    {% endif %}

                    <div class="card-content">
                        <h3 class="card-title">{{ game.title }}</h3>

                        <div class="card-meta">
                            {% if game.platform %}
                                <span class="meta-item">
                                    <span class="meta-label">Plateforme</span>
                                    <span class="meta-value">{{ game.platform.name }}</span>
                                </span>
                            {% endif %}

                            {% if game.developer %}
                                <span class="meta-item">
                                    <span class="meta-label">D√©veloppeur</span>
                                    <span class="meta-value">{{ game.developer }}</span>
                                </span>
                            {% endif %}

                            {% if game.releaseDate %}
                                <span class="meta-item">
                                    <span class="meta-label">Sortie</span>
                                    <span class="meta-value">{{ game.releaseDate|date('d/m/Y') }}</span>
                                </span>
                            {% endif %}
                        </div>

                        {% if game.genres is not empty %}
                            <div class="card-tags">
                                {% for genre in game.genres %}
                                    <span class="tag">{{ genre.name }}</span>
                                {% endfor %}
                            </div>
                        {% endif %}

                        <div class="card-actions">
                            <a href="{{ path('app_game_show', {'id': game.id}) }}" class="btn btn-secondary btn-sm">
                                Voir d√©tails
                            </a>

                            {% if is_granted('edit', game) %}
                                <a href="{{ path('app_game_edit', {'id': game.id}) }}" class="btn btn-outline btn-sm" title="Modifier">
                                    ‚úèÔ∏è
                                </a>
                            {% endif %}

                            {% if is_granted('delete', game) %}
                                <form method="post" action="{{ path('app_game_delete', {'id': game.id}) }}" class="inline-form" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce jeu ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Supprimer">üóëÔ∏è</button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <script>
        function toggleFilters() {
            const content = document.getElementById('filters-content');
            const arrow = document.getElementById('filters-arrow');

            if (content.style.display === 'none' || content.style.display === '') {
                content.style.display = 'block';
                arrow.textContent = '‚ñ≤';
            } else {
                content.style.display = 'none';
                arrow.textContent = '‚ñº';
            }
        }

        // Ouvrir les filtres automatiquement si des filtres sont actifs
        document.addEventListener('DOMContentLoaded', function() {
            const hasActiveFilters = {{ (currentFilters.platform or currentFilters.year or currentFilters.genre or currentFilters.mode) ? 'true' : 'false' }};
            if (hasActiveFilters) {
                document.getElementById('filters-content').style.display = 'block';
                document.getElementById('filters-arrow').textContent = '‚ñ≤';
            }
        });
    </script>
{% endblock %}
