{% extends 'base.html.twig' %}

{% block title %}Inscription - {{ parent() }}{% endblock %}

{% block body %}
    <div class="auth-wrapper">
        <!-- Décorations rétro -->
        <i class="fas fa-gamepad auth-decoration top-left"></i>
        <i class="fas fa-ghost auth-decoration bottom-right"></i>

        <div class="auth-card">
            <!-- Header -->
            <div class="auth-header">
                <h1>
                    <i class="fas fa-user-plus"></i>
                    Inscription
                </h1>
                <p>Rejoignez la communauté des collectionneurs rétro</p>
            </div>

            <!-- Body -->
            <div class="auth-body">
                {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}

                    <!-- Email -->
                    <div class="auth-form-group">
                        <label for="{{ registrationForm.email.vars.id }}" class="form-label">
                            <i class="fas fa-envelope"></i>
                            Email
                        </label>
                        {{ form_widget(registrationForm.email, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'votre@email.com'
                            }
                        }) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <!-- Username -->
                    <div class="auth-form-group">
                        <label for="{{ registrationForm.username.vars.id }}" class="form-label">
                            <i class="fas fa-user"></i>
                            Nom d'utilisateur
                        </label>
                        {{ form_widget(registrationForm.username, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Choisissez votre pseudo'
                            }
                        }) }}
                        {{ form_errors(registrationForm.username) }}
                        <small class="text-muted" style="display: block; margin-top: 0.25rem; font-size: 0.875rem;">
                            <i class="fas fa-info-circle me-1"></i>
                            Ce nom sera visible par les autres utilisateurs
                        </small>
                    </div>

                    <!-- Password -->
                    <div class="auth-form-group">
                        <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label">
                            <i class="fas fa-lock"></i>
                            Mot de passe
                        </label>
                        {{ form_widget(registrationForm.plainPassword, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': '••••••••'
                            }
                        }) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                        <small class="text-muted" style="display: block; margin-top: 0.25rem; font-size: 0.875rem;">
                            <i class="fas fa-shield-halved me-1"></i>
                            Minimum 8 caractères recommandés
                        </small>
                    </div>

                    <!-- Submit Button -->
                    <div style="margin-top: 2rem;">
                        <button type="submit" class="auth-submit-btn">
                            <i class="fas fa-rocket"></i>
                            Créer mon compte
                        </button>
                    </div>

                {{ form_end(registrationForm) }}
            </div>

            <!-- Footer -->
            <div class="auth-footer">
                <p>
                    Déjà inscrit ?
                    <a href="{{ path('app_login') }}">
                        <i class="fas fa-sign-in-alt me-1"></i>Connectez-vous
                    </a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Animation d'entrée
        document.addEventListener('DOMContentLoaded', function() {
            const card = document.querySelector('.auth-card');
            if (card) {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease-out';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 100);
            }
        });
    </script>
{% endblock %}

