{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}
    <div class="d-flex flex--center" style="min-height: 60vh;">
        <div style="max-width: 500px; width: 100%;">
            <div class="card">
                <div class="card__body">
                    <h1 class="text--center mb-md" style="font-size: 2rem; font-weight: 700; color: #F0F0C9;">
                        <i class="fas fa-sign-in-alt"></i> Connexion
                    </h1>

                    <form method="post">
                        {% if error %}
                            <div class="alert alert--error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <div class="form__group">
                            <label for="inputEmail" class="form__label">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form__input" autocomplete="email" required autofocus placeholder="votre@email.com">
                        </div>

                        <div class="form__group">
                            <label for="inputPassword" class="form__label">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form__input" required placeholder="••••••••">
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="text--center mt-md">
                            <button class="btn btn--primary btn--large" type="submit" style="width: 100%;">
                                <i class="fas fa-sign-in-alt"></i> Se connecter
                            </button>
                        </div>
                    </form>

                    <div class="mt-md text--center">
                        <p class="text--muted">
                            Pas encore de compte ?
                            <a href="{{ path('app_register') }}" class="text--primary" style="font-weight: 600;">Inscrivez-vous</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
