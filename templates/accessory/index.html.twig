{% extends 'base.html.twig' %}

{% block title %}Accessoires - {{ parent() }}{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="page-header-content">
            <h1 class="page-title">
                <span class="icon">üéß</span>
                Accessoires
            </h1>
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_accessory_new') }}" class="btn btn-primary">
                    <span class="btn-icon">+</span>
                    Ajouter un accessoire
                </a>
            {% endif %}
        </div>
    </div>

    {% if accessories is empty %}
        <div class="empty-state">
            <div class="empty-state-icon">üéß</div>
            <h2 class="empty-state-title">Aucun accessoire pour le moment</h2>
            <p class="empty-state-text">Commencez √† documenter vos accessoires gaming !</p>
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_accessory_new') }}" class="btn btn-primary">Ajouter votre premier accessoire</a>
            {% endif %}
        </div>
    {% else %}
        <div class="cards-grid">
            {% for accessory in accessories %}
                <div class="card-item">
                    {% if accessory.image %}
                        <div class="card-image" style="background-image: url('{{ accessory.image }}');">
                            <div class="card-image-overlay"></div>
                        </div>
                    {% else %}
                        <div class="card-image card-image-placeholder">
                            <span class="placeholder-icon">üéß</span>
                        </div>
                    {% endif %}

                    <div class="card-content">
                        <h3 class="card-title">{{ accessory.name }}</h3>

                        <div class="card-meta">
                            {% if accessory.type %}
                                <span class="meta-item">
                                    <span class="meta-label">Type</span>
                                    <span class="meta-value">{{ accessory.type }}</span>
                                </span>
                            {% endif %}

                            {% if accessory.compatibility %}
                                <span class="meta-item">
                                    <span class="meta-label">Compatibilit√©</span>
                                    <span class="meta-value">{{ accessory.compatibility }}</span>
                                </span>
                            {% endif %}

                            {% if accessory.releaseDate %}
                                <span class="meta-item">
                                    <span class="meta-label">Sortie</span>
                                    <span class="meta-value">{{ accessory.releaseDate|date('d/m/Y') }}</span>
                                </span>
                            {% endif %}
                        </div>

                        <div class="card-actions">
                            <a href="{{ path('app_accessory_show', {'id': accessory.id}) }}" class="btn btn-secondary btn-sm">
                                Voir d√©tails
                            </a>

                            {% if is_granted('edit', accessory) %}
                                <a href="{{ path('app_accessory_edit', {'id': accessory.id}) }}" class="btn btn-outline btn-sm" title="Modifier">
                                    ‚úèÔ∏è
                                </a>
                            {% endif %}

                            {% if is_granted('delete', accessory) %}
                                <form method="post" action="{{ path('app_accessory_delete', {'id': accessory.id}) }}" class="inline-form" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cet accessoire ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ accessory.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Supprimer">üóëÔ∏è</button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}

