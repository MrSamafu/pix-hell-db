{% extends 'base.html.twig' %}

{% block title %}Accessoires - {{ parent() }}{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="page-header-content">
            <h1 class="page-title">
                <span class="icon">üéß</span>
                Accessoires
            </h1>
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_accessory_new') }}" class="btn btn-primary">
                    <span class="btn-icon">+</span>
                    Ajouter un accessoire
                </a>
            {% endif %}
        </div>
    </div>

    {# Barre de recherche et filtres #}
    <div class="search-container">
        <form method="get" action="{{ path('app_accessory_index') }}" class="search-form">
            {# Barre de recherche principale #}
            <div class="search-bar">
                <div class="search-input-wrapper">
                    <span class="search-icon">üîç</span>
                    <input
                        type="text"
                        name="search"
                        class="search-input"
                        placeholder="Rechercher un accessoire (nom, type, compatibilit√©)..."
                        value="{{ currentFilters.search ?? '' }}"
                    >
                    {% if currentFilters.search %}
                        <a href="{{ path('app_accessory_index') }}" class="search-clear" title="Effacer la recherche">‚úï</a>
                    {% endif %}
                </div>
                <button type="submit" class="btn btn-primary">
                    Rechercher
                </button>
            </div>

            {# Filtres avanc√©s #}
            <div class="search-filters">
                <div class="filters-toggle" onclick="toggleFilters()">
                    <span class="filters-icon">‚öôÔ∏è</span>
                    <span class="filters-text">Filtres avanc√©s</span>
                    <span class="filters-arrow" id="filters-arrow">‚ñº</span>
                </div>

                <div class="filters-content" id="filters-content">
                    <div class="filters-grid">
                        {# Filtre Type #}
                        <div class="filter-group">
                            <label for="type" class="filter-label">üéÆ Type</label>
                            <select name="type" id="type" class="filter-select">
                                <option value="">Tous les types</option>
                                {% for type in types %}
                                    <option value="{{ type }}" {{ currentFilters.type == type ? 'selected' : '' }}>
                                        {{ type }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        {# Filtre Compatibilit√© #}
                        <div class="filter-group">
                            <label for="compatibility" class="filter-label">üîó Compatibilit√©</label>
                            <select name="compatibility" id="compatibility" class="filter-select">
                                <option value="">Toutes les compatibilit√©s</option>
                                {% for compatibility in compatibilities %}
                                    <option value="{{ compatibility }}" {{ currentFilters.compatibility == compatibility ? 'selected' : '' }}>
                                        {{ compatibility }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        {# Filtre Ann√©e #}
                        <div class="filter-group">
                            <label for="year" class="filter-label">üìÖ Ann√©e</label>
                            <select name="year" id="year" class="filter-select">
                                <option value="">Toutes les ann√©es</option>
                                {% for year in years %}
                                    <option value="{{ year }}" {{ currentFilters.year == year ? 'selected' : '' }}>
                                        {{ year }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    {# Recherche alphab√©tique #}
                    <div class="filter-group alphabet-filter">
                        <label class="filter-label">üî§ Recherche alphab√©tique</label>
                        <div class="alphabet-grid">
                            <a href="{{ path('app_accessory_index') }}"
                               class="alphabet-btn {{ currentFilters.letter is empty ? 'active' : '' }}"
                               title="Tous">
                                Tous
                            </a>
                            {% for letter in alphabet %}
                                <a href="{{ path('app_accessory_index', {letter: letter}) }}"
                                   class="alphabet-btn {{ currentFilters.letter == letter ? 'active' : '' }}"
                                   title="Commence par {{ letter }}">
                                    {{ letter }}
                                </a>
                            {% endfor %}
                        </div>
                    </div>

                    {# Actions des filtres #}
                    <div class="filters-actions">
                        <button type="submit" class="btn btn-primary">
                            ‚úì Appliquer les filtres
                        </button>
                        <a href="{{ path('app_accessory_index') }}" class="btn btn-outline">
                            ‚úï R√©initialiser
                        </a>
                    </div>
                </div>
            </div>
        </form>

        {# R√©sum√© des filtres actifs #}
        {% if currentFilters.search or currentFilters.type or currentFilters.compatibility or currentFilters.year or currentFilters.letter %}
            <div class="active-filters">
                <span class="active-filters-label">Filtres actifs :</span>
                <div class="active-filters-list">
                    {% if currentFilters.search %}
                        <span class="filter-tag">
                            üîç "{{ currentFilters.search }}"
                            <a href="{{ path('app_accessory_index', currentFilters|filter((v, k) => k != 'search')) }}" class="filter-tag-remove">‚úï</a>
                        </span>
                    {% endif %}
                    {% if currentFilters.type %}
                        <span class="filter-tag">
                            üéÆ {{ currentFilters.type }}
                            <a href="{{ path('app_accessory_index', currentFilters|filter((v, k) => k != 'type')) }}" class="filter-tag-remove">‚úï</a>
                        </span>
                    {% endif %}
                    {% if currentFilters.compatibility %}
                        <span class="filter-tag">
                            üîó {{ currentFilters.compatibility }}
                            <a href="{{ path('app_accessory_index', currentFilters|filter((v, k) => k != 'compatibility')) }}" class="filter-tag-remove">‚úï</a>
                        </span>
                    {% endif %}
                    {% if currentFilters.year %}
                        <span class="filter-tag">
                            üìÖ {{ currentFilters.year }}
                            <a href="{{ path('app_accessory_index', currentFilters|filter((v, k) => k != 'year')) }}" class="filter-tag-remove">‚úï</a>
                        </span>
                    {% endif %}
                    {% if currentFilters.letter %}
                        <span class="filter-tag">
                            üî§ {{ currentFilters.letter }}
                            <a href="{{ path('app_accessory_index', currentFilters|filter((v, k) => k != 'letter')) }}" class="filter-tag-remove">‚úï</a>
                        </span>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        {# Compteur de r√©sultats #}
        <div class="search-results-count">
            <strong>{{ accessories|length }}</strong> accessoire{{ accessories|length > 1 ? 's' : '' }} trouv√©{{ accessories|length > 1 ? 's' : '' }}
        </div>
    </div>

    {% if accessories is empty %}
        <div class="empty-state">
            <div class="empty-state-icon">üéß</div>
            <h2 class="empty-state-title">Aucun accessoire pour le moment</h2>
            <p class="empty-state-text">Commencez √† documenter vos accessoires gaming !</p>
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_accessory_new') }}" class="btn btn-primary">Ajouter votre premier accessoire</a>
            {% endif %}
        </div>
    {% else %}
        <div class="cards-grid">
            {% for accessory in accessories %}
                <div class="card-item">
                    {% if accessory.image %}
                        <div class="card-image" style="background-image: url('{{ accessory.image }}');">
                            <div class="card-image-overlay"></div>
                        </div>
                    {% else %}
                        <div class="card-image card-image-placeholder">
                            <span class="placeholder-icon">üéß</span>
                        </div>
                    {% endif %}

                    <div class="card-content">
                        <h3 class="card-title">{{ accessory.name }}</h3>

                        <div class="card-meta">
                            {% if accessory.type %}
                                <span class="meta-item">
                                    <span class="meta-label">Type</span>
                                    <span class="meta-value">{{ accessory.type }}</span>
                                </span>
                            {% endif %}

                            {% if accessory.compatibility %}
                                <span class="meta-item">
                                    <span class="meta-label">Compatibilit√©</span>
                                    <span class="meta-value">{{ accessory.compatibility }}</span>
                                </span>
                            {% endif %}

                            {% if accessory.releaseDate %}
                                <span class="meta-item">
                                    <span class="meta-label">Sortie</span>
                                    <span class="meta-value">{{ accessory.releaseDate|date('d/m/Y') }}</span>
                                </span>
                            {% endif %}
                        </div>

                        <div class="card-actions">
                            <a href="{{ path('app_accessory_show', {'id': accessory.id}) }}" class="btn btn-secondary btn-sm">
                                Voir d√©tails
                            </a>

                            {% if is_granted('edit', accessory) %}
                                <a href="{{ path('app_accessory_edit', {'id': accessory.id}) }}" class="btn btn-outline btn-sm" title="Modifier">
                                    ‚úèÔ∏è
                                </a>
                            {% endif %}

                            {% if is_granted('delete', accessory) %}
                                <form method="post" action="{{ path('app_accessory_delete', {'id': accessory.id}) }}" class="inline-form" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cet accessoire ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ accessory.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Supprimer">üóëÔ∏è</button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <script>
        function toggleFilters() {
            const content = document.getElementById('filters-content');
            const arrow = document.getElementById('filters-arrow');

            if (content.style.display === 'none' || content.style.display === '') {
                content.style.display = 'block';
                arrow.textContent = '‚ñ≤';
            } else {
                content.style.display = 'none';
                arrow.textContent = '‚ñº';
            }
        }

        // Ouvrir les filtres automatiquement si des filtres sont actifs
        document.addEventListener('DOMContentLoaded', function() {
            const hasActiveFilters = {{ (currentFilters.type or currentFilters.compatibility or currentFilters.year) ? 'true' : 'false' }};
            if (hasActiveFilters) {
                document.getElementById('filters-content').style.display = 'block';
                document.getElementById('filters-arrow').textContent = '‚ñ≤';
            }
        });
    </script>
{% endblock %}

