{% extends 'base.html.twig' %}

{% block title %}Accessoires - PixHell{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Accessoires</h1>
    <div>
        {% if is_granted('ROLE_USER') %}
            <a href="{{ path('app_accessory_new') }}" class="btn btn-primary">Ajouter un accessoire</a>
        {% endif %}
    </div>
</div>

<div class="row">
    {% for accessory in accessories %}
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ accessory.name }}</h5>
                    <p class="card-text mb-1">Type : {{ accessory.type }}</p>
                    <p class="card-text mb-2">Compatibilité : {{ accessory.compatibility }}</p>
                    <div class="mt-auto">
                        <a href="{{ path('app_accessory_show', {'id': accessory.id}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                        {% if is_granted('edit', accessory) %}
                            <a href="{{ path('app_accessory_edit', {'id': accessory.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12">
            <p>Aucun accessoire trouvé.</p>
        </div>
    {% endfor %}
</div>
{% endblock %}

