{% extends 'base.html.twig' %}

{% block title %}{{ accessory.name }} - {{ parent() }}{% endblock %}

{% block body %}
    {# Header avec actions #}
    <div class="page-header">
        <div class="page-header-content">
            <a href="{{ path('app_accessory_index') }}" class="btn btn-outline btn-sm">
                ‚Üê Retour √† la liste
            </a>

            <div class="btn-actions">
                {% if is_granted('edit', accessory) %}
                    <a href="{{ path('app_accessory_edit', {'id': accessory.id}) }}" class="btn btn-outline btn-sm">
                        ‚úèÔ∏è Modifier
                    </a>
                {% endif %}
                {% if is_granted('delete', accessory) %}
                    <form method="post" action="{{ path('app_accessory_delete', {'id': accessory.id}) }}" class="inline-form" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cet accessoire ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ accessory.id) }}">
                        <button type="submit" class="btn btn-danger btn-sm">üóëÔ∏è Supprimer</button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>

    {# Contenu principal #}
    <div class="detail-container">
        <div class="detail-main">
            {# Image de l'accessoire #}
            <div class="detail-image">
                {% if accessory.image %}
                    <img src="{{ accessory.image }}" alt="{{ accessory.name }}" class="detail-image-img">
                {% else %}
                    <div class="detail-image-placeholder">
                        <span class="placeholder-icon">üéß</span>
                        <p>Aucune image</p>
                    </div>
                {% endif %}
            </div>

            {# Informations principales #}
            <div class="detail-content">
                <h1 class="detail-title">{{ accessory.name }}</h1>

                {# Tags rapides #}
                <div class="detail-tags">
                    <span class="tag tag-platform">üéÆ {{ accessory.type }}</span>
                    {% if accessory.compatibility %}
                        <span class="tag tag-series">üîó {{ accessory.compatibility }}</span>
                    {% endif %}
                </div>

                {# Informations d√©taill√©es #}
                <div class="detail-section">
                    <h2 class="detail-section-title">‚ÑπÔ∏è Informations</h2>
                    <div class="detail-info-grid">
                        <div class="info-item">
                            <span class="info-label">Type</span>
                            <span class="info-value">{{ accessory.type }}</span>
                        </div>

                        <div class="info-item">
                            <span class="info-label">Compatibilit√©</span>
                            <span class="info-value">{{ accessory.compatibility }}</span>
                        </div>

                        {% if accessory.releaseDate %}
                            <div class="info-item">
                                <span class="info-label">Date de sortie</span>
                                <span class="info-value">{{ accessory.releaseDate|date('d/m/Y') }}</span>
                            </div>
                        {% endif %}

                        {% if accessory.createdAt %}
                            <div class="info-item">
                                <span class="info-label">Ajout√© le</span>
                                <span class="info-value">{{ accessory.createdAt|date('d/m/Y √† H:i') }}</span>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {# Sidebar - Ajout √† la collection #}
        {% if is_granted('ROLE_USER') %}
            <div class="detail-sidebar">
                <div class="collection-card">
                    <div class="collection-card-header">
                        <h3 class="collection-card-title">üì¶ Ma Collection</h3>
                    </div>

                    <div class="collection-card-body">
                        <form method="post" action="{{ path('app_accessory_add_to_collection', {'id': accessory.id}) }}" class="collection-form">
                            <div class="form__group">
                                <label for="quantity" class="form__label">
                                    Nombre d'exemplaires
                                </label>
                                <div class="quantity-input">
                                    <button type="button" class="quantity-btn quantity-minus" onclick="decreaseQuantity()">‚àí</button>
                                    <input
                                        type="number"
                                        id="quantity"
                                        name="quantity"
                                        class="quantity-field"
                                        value="1"
                                        min="1"
                                        max="99"
                                        required
                                    >
                                    <button type="button" class="quantity-btn quantity-plus" onclick="increaseQuantity()">+</button>
                                </div>
                                <small class="form-help">
                                    Indiquez combien d'exemplaires vous poss√©dez
                                </small>
                            </div>

                            <button type="submit" class="btn btn-primary btn-block">
                                <span class="btn-icon">+</span>
                                Ajouter √† ma collection
                            </button>
                        </form>
                    </div>

                    <div class="collection-card-footer">
                        <p class="collection-hint">
                            üí° Vous pourrez g√©rer vos accessoires depuis votre collection
                        </p>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>

    <script>
        function increaseQuantity() {
            const input = document.getElementById('quantity');
            const currentValue = parseInt(input.value) || 1;
            if (currentValue < 99) {
                input.value = currentValue + 1;
            }
        }

        function decreaseQuantity() {
            const input = document.getElementById('quantity');
            const currentValue = parseInt(input.value) || 1;
            if (currentValue > 1) {
                input.value = currentValue - 1;
            }
        }
    </script>
{% endblock %}
