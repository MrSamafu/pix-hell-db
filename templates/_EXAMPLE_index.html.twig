{% extends 'base.html.twig' %}

{% block title %}Liste des Jeux - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">

    {# Header avec titre et bouton d'ajout #}
    <div class="d-flex flex--between mb-xl" style="align-items: center; flex-wrap: wrap; gap: 1rem;">
        <h1 class="page-title" style="margin-bottom: 0;">
            <i class="fas fa-gamepad"></i> Jeux Vidéo
        </h1>

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('app_game_new') }}" class="btn btn--primary">
                <i class="fas fa-plus"></i> Ajouter un jeu
            </a>
        {% endif %}
    </div>

    {# Statistiques (optionnel) #}
    {% if games is defined %}
    <div class="grid grid--4 mb-xl">
        <div class="stat-card">
            <div class="stat-value">{{ games|length }}</div>
            <div class="stat-label">Jeux au total</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">--</div>
            <div class="stat-label">Consoles</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">--</div>
            <div class="stat-label">Genres</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">--</div>
            <div class="stat-label">Éditeurs</div>
        </div>
    </div>
    {% endif %}

    {# Filtres (optionnel) #}
    <div class="card mb-lg">
        <div class="card__body">
            <form method="get" class="form--inline">
                <div class="form__group">
                    <label class="form__label">Rechercher</label>
                    <input type="text" name="search" class="form__input" placeholder="Titre du jeu...">
                </div>
                <div class="form__group">
                    <label class="form__label">Console</label>
                    <select name="console" class="form__select">
                        <option value="">Toutes</option>
                        {# Boucle sur les consoles #}
                    </select>
                </div>
                <button type="submit" class="btn btn--primary">
                    <i class="fas fa-search"></i> Rechercher
                </button>
            </form>
        </div>
    </div>

    {# Grille de jeux #}
    {% if games is defined and games is not empty %}
        <div class="grid grid--3">
            {% for game in games %}
            <div class="card card--hover-effect">

                {# Image #}
                {% if game.image %}
                    <img src="{{ game.image }}" alt="{{ game.title }}" class="card__image">
                {% else %}
                    <div class="card__image" style="display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, rgba(103, 97, 168, 0.3), rgba(160, 193, 185, 0.3));">
                        <i class="fas fa-gamepad" style="font-size: 3rem; opacity: 0.5; color: #F0F0C9;"></i>
                    </div>
                {% endif %}

                {# Corps de la card #}
                <div class="card__body">

                    {# Badges #}
                    <div class="mb-sm">
                        {% if game.console %}
                            <span class="badge badge--secondary">{{ game.console.name }}</span>
                        {% endif %}
                        {% if game.releaseDate %}
                            <span class="badge badge--primary">{{ game.releaseDate|date('Y') }}</span>
                        {% endif %}
                    </div>

                    {# Titre #}
                    <h3 class="card__title">{{ game.title }}</h3>

                    {# Informations #}
                    <div class="text--muted mb-sm">
                        {% if game.developer %}
                            <div><i class="fas fa-code"></i> {{ game.developer }}</div>
                        {% endif %}
                        {% if game.publisher %}
                            <div><i class="fas fa-building"></i> {{ game.publisher }}</div>
                        {% endif %}
                    </div>

                    {# Genres #}
                    {% if game.genres is not empty %}
                        <div class="mt-sm">
                            {% for genre in game.genres %}
                                <span class="tag">{{ genre.name }}</span>
                            {% endfor %}
                        </div>
                    {% endif %}

                    {# Modes de jeu #}
                    {% if game.gameModes is not empty %}
                        <div class="mt-sm">
                            {% for mode in game.gameModes %}
                                <span class="badge badge--accent" style="font-size: 0.7rem;">
                                    <i class="fas fa-users"></i> {{ mode.name }}
                                </span>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                {# Footer avec actions #}
                <div class="card__footer">
                    <a href="{{ path('app_game_show', {'id': game.id}) }}" class="btn btn--primary btn--small">
                        <i class="fas fa-eye"></i> Détails
                    </a>

                    {% if is_granted('EDIT', game) %}
                        <a href="{{ path('app_game_edit', {'id': game.id}) }}" class="btn btn--secondary btn--small">
                            <i class="fas fa-edit"></i>
                        </a>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>

        {# Pagination (si nécessaire) #}
        <div class="text--center mt-xl">
            {# Ajoutez votre système de pagination ici #}
        </div>

    {% else %}
        {# État vide #}
        <div class="empty-state">
            <div class="empty-state__icon">
                <i class="fas fa-gamepad"></i>
            </div>
            <h2 class="empty-state__title">Aucun jeu trouvé</h2>
            <p class="empty-state__text">
                Commencez par ajouter votre premier jeu à la collection !
            </p>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ path('app_game_new') }}" class="btn btn--primary btn--large">
                    <i class="fas fa-plus"></i> Ajouter mon premier jeu
                </a>
            {% endif %}
        </div>
    {% endif %}

</div>

{# Bouton flottant pour actions rapides (optionnel) #}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <a href="{{ path('app_game_new') }}" class="fab" title="Ajouter un jeu">
        <i class="fas fa-plus" style="font-size: 1.5rem;"></i>
    </a>
{% endif %}

{% endblock %}

