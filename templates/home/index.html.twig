{% extends 'base.html.twig' %}

{% block title %}Accueil - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-between align-items-center my-4">
        <h1 class="h3">Bienvenue sur Pix Hell DB</h1>

        <div>
            {% if app.user %}
                <div class="btn-group">
                    <a href="{{ path('app_profile') }}" class="btn btn-outline-primary">Profil</a>
                    <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Déconnexion</a>
                </div>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-body">
                    <h2 class="h5">À propos</h2>
                    <p>Bienvenue sur votre gestionnaire de collection de jeux, consoles et accessoires. Utilisez le menu ci-dessus pour naviguer.</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h3 class="h6">Derniers ajouts</h3>
                            {% if latest_items is defined and latest_items is not empty %}
                                <ul class="list-group list-group-flush">
                                {% for item in latest_items %}
                                    {% set entity = item.entity %}
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            {% if item.type == 'game' %}
                                                <strong>Jeu</strong> — <a href="{{ path('app_game_show', {'id': entity.id}) }}">{{ entity.title }}</a>
                                            {% elseif item.type == 'console' %}
                                                <strong>Console</strong> — <a href="{{ path('app_console_show', {'id': entity.id}) }}">{{ entity.name }}</a>
                                            {% else %}
                                                <strong>Accessoire</strong> — <a href="{{ path('app_accessory_show', {'id': entity.id}) }}">{{ entity.name }}</a>
                                            {% endif %}
                                        </div>
                                        <small class="text-muted">{{ item.date ? item.date|date('d/m/Y') : '' }}</small>
                                    </li>
                                {% endfor %}
                                </ul>
                            {% else %}
                                <p class="mb-0">Aucun ajout récent.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h3 class="h6">Raccourcis</h3>
                    <ul class="list-unstyled mb-0">
                        <li><a href="{{ path('app_game_index') }}">Consulter les jeux</a></li>
                        <li><a href="{{ path('app_console_index') }}">Consulter les consoles</a></li>
                        <li><a href="{{ path('app_accessory_index') }}">Consulter les accessoires</a></li>
                        <li><a href="{{ path('app_collection_index') }}">Ma collection</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
